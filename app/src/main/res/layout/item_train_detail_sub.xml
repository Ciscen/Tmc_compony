<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/color_f2f2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_train_detail_sub_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/train_sendticket" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_train_detail_sub_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="火车票+送票上门"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_train_detail_sub_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="配送费¥20/张，提前3天预订"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_999"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_train_detail_book"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_button_blue_unpressed"
            android:gravity="center"
            android:text="预订"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>