<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotel_room_info_breckfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:text="含早"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hotel_room_info_cancelable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可取消"
                android:textColor="@color/color_999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hotel_room_info_lastnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="20dp"
                android:text="仅剩6间"
                android:textColor="@color/appTheme2"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/item_hotel_room_info_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_hotel_room_info_wei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wei" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="2dp"
                    android:text="￥"
                    android:textColor="@color/appTheme2"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/item_hotel_room_info_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="845.0"
                    android:textColor="@color/appTheme2"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/hotel_room_info_other_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hotel_room_info_promotion" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/hotel_room_info_instant_sure" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_hotel_room_info_fan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_hotel_room_info_ll"
                android:layout_marginTop="6dp"
                android:text="900返25"
                android:textColor="@color/color_999"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_hotel_room_info_book"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_hotel_room_info_book_tv"
                android:layout_width="38dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_hotel_room_info_top"
                android:gravity="center"
                android:text="订"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_hotel_room_info_paytype"
                android:layout_width="38dp"
                android:layout_height="13dp"
                android:background="@drawable/shape_hotel_room_info_bottom"
                android:gravity="center"
                android:text="到店付"
                android:textColor="@color/appTheme1"
                android:textSize="9sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_hotel_room_info_out"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_hotel_room_info_man"
                android:gravity="center"
                android:padding="2dp"
                android:text="已售完"

                android:textColor="@color/color_fff"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_hotel_room_info_guarantee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="担保"
            android:textColor="@color/appTheme1"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>