<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.auvgo.tmc.hotel.fragment.HotelDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.auvgo.tmc.views.StateView
            android:id="@+id/hotel_detail_detail_wifi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imgOff="@mipmap/hotel_wifi_unchecked"
            app:imgOn="@mipmap/hotel_wifi"
            app:isOn="false"
            app:viewName="无线上网" />

        <com.auvgo.tmc.views.StateView
            android:id="@+id/hotel_detail_detail_park"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imgOff="@mipmap/hotel_park_unckecked"
            app:imgOn="@mipmap/hotel_park"
            app:isOn="false"
            app:viewName="免费停车" />

        <com.auvgo.tmc.views.StateView
            android:id="@+id/hotel_detail_detail_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imgOff="@mipmap/hotel_package_unchecked"
            app:imgOn="@mipmap/hotel_package"
            app:isOn="false"
            app:viewName="行李寄存" />

        <com.auvgo.tmc.views.StateView
            android:id="@+id/hotel_detail_detail_meettingroom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imgOff="@mipmap/hotel_meetingroom_unchecked"
            app:imgOn="@mipmap/hotel_meetingroom"
            app:isOn="false"
            app:viewName="会议室" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/hotel_detail_detail_more"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/arrow_right_more"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="查看全部信息"
        android:textColor="@color/appTheme1"
        android:textSize="10sp" />
</RelativeLayout>
