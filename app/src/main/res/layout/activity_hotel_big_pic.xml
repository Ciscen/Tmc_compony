<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hotel_big_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.auvgo.tmc.hotel.activity.HotelBigPicActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@mipmap/back" />

    <android.support.v4.view.ViewPager
        android:id="@+id/hotel_big_pic_vp"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/hotel_big_pic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hotel_big_pic_num"
        android:layout_marginLeft="10dp"
        android:text="客房"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hotel_big_pic_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="10/13"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>
