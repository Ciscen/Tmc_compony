<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/item_train_order_detail_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="梁晨晨"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_train_order_detail_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="151351515461535116088"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_train_order_detail_tui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/returnlogo" />

        <ImageView
            android:id="@+id/item_train_order_detail_gai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/alter" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_train_order_detail_piaohao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="票号：16513545"
        android:textColor="@color/black"
        android:textSize="14sp" />
</LinearLayout>