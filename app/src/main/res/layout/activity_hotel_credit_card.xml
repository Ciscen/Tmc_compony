<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hotel_credit_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.auvgo.tmc.hotel.activity.HotelCreditCardActivity">

    <com.auvgo.tmc.views.TitleView
        android:layout_width="match_parent"
        android:id="@+id/credit_card_title"
        android:layout_height="wrap_content"
        app:title="信用卡有效期" />

    <TextView
        android:id="@+id/credit_card_tv1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="信用卡有效期通常在正面的卡号下方,示例如下图："
        android:textColor="@color/color_333"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/credit_card_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/credit_card" />

    <TextView
        android:id="@+id/credit_card_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="有效期：月/年（例如上图为2019年12月）"
        android:textColor="@color/color_333"
        android:textSize="12sp" />
</LinearLayout>
