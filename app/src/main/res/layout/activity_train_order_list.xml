<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_order_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.auvgo.tmc.personalcenter.activity.OrderListActivity">

    <include layout="@layout/layout_title_orderlist" />

    <FrameLayout
        android:id="@+id/home_order_list_tab_fl"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_order_list_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="正常单(0)"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_order_list_retrun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="退票单(0)"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_order_list_alter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="改签单(0)"
                android:textColor="@color/color_333"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/home_order_list_indicator"
            android:layout_width="105dp"
            android:layout_height="1.5dp"
            android:layout_gravity="bottom"
            android:background="@color/appTheme1"
            android:padding="50dp" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_order_list_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
