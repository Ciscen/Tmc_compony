<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hotel_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2"
    android:orientation="vertical"
    tools:context="com.auvgo.tmc.hotel.activity.HotelQueryActivity">

    <com.auvgo.tmc.views.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="酒店查询" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/hotel_query_psgs_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/hotel_query_chailv_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hotel_notice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="差旅标准"
                android:textColor="@color/color_333"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/hotel_query_city_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="目的地"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/hotel_query_location_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hotel_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="我的位置"
                android:textColor="@color/color_333"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/layout_divider" />

    <RelativeLayout
        android:id="@+id/hotel_query_date_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/hotel_query_date_in_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/hotel_query_inDate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02.09"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hotel_query_inDay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="周四"
                android:textColor="@color/color_999"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/hotel_query_totalDays_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="共2晚"
            android:textColor="@color/color_999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/hotel_query_date_out_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/hotel_query_outDate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02.09"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hotel_query_outDay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="周四"
                android:textColor="@color/color_999"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/layout_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hotel_query_keyword_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="关键字/品牌/商圈"
            android:paddingLeft="10dp"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/hotel_query_keyword_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/edittext_delete"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/layout_divider" />

    <TextView
        android:id="@+id/hotel_query_level_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="价格/星级"
        android:paddingLeft="10dp"
        android:textColor="@color/color_333"
        android:textColorHint="@color/color_999"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/hotel_query_query_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_button_red"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/home_search"
            android:drawablePadding="7dp"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>
