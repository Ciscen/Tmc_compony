<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/home_order_list_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="finish"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/home_order_list_title_tv"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="个人订单"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/home_order_list_title_rg"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/title_orderlist_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_order_list_title_left"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:text="个人订单"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/title_orderlist_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_order_list_title_right"
                android:button="@null"
                android:checked="false"
                android:clickable="true"
                android:gravity="center"
                android:text="全部订单"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/title_orderlist_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="15dp"
            android:src="@mipmap/home_search" />
    </RelativeLayout>
</LinearLayout>