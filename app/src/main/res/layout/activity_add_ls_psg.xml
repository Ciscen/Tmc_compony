<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.auvgo.tmc.common.AddLsPsgActivity">

    <com.auvgo.tmc.views.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="添加临时乘客" />

    <com.auvgo.tmc.views.ItemView
        android:id="@+id/add_ls_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="请输入姓名"
        app:inputable="true"
        app:itemTitle="姓名"
        app:itemTitleColor="#000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.auvgo.tmc.views.ItemView
            android:id="@+id/add_ls_idtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content="身份证"
            app:itemTitle="证件类型"
            app:itemTitleColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:src="@mipmap/arrowright" />
    </FrameLayout>

    <com.auvgo.tmc.views.ItemView
        android:id="@+id/add_ls_cerno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="请输入证件号码"
        app:inputable="true"
        app:itemTitle="证件号码"
        app:itemTitleColor="#000000" />

    <com.auvgo.tmc.views.ItemView
        android:id="@+id/add_ls_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="请输入手机号码"
        app:inputable="true"
        app:itemTitle="手机号码"
        app:itemTitleColor="#000000" />

    <TextView
        android:id="@+id/add_ls_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@drawable/selector_button_red"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
