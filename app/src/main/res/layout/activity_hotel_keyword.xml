<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hotel_keyword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.auvgo.tmc.hotel.activity.HotelKeywordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/appTheme1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hotel_keyword_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/hotel_keyword_et"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/shape_login"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="7dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="关键字/位置/品牌/酒店名"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="@color/color_333"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/hotel_keyword_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/edittext_delete" />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/hotel_keyword_lv0"
            android:layout_width="105dp"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/hotel_keyword_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:dividerHeight="1px"
            android:paddingLeft="23dp" />
    </LinearLayout>
</LinearLayout>
