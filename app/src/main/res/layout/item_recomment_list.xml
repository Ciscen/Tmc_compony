<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_plane_recomment_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/pmu" />

        <TextView
            android:id="@+id/item_plane_recomment_airline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="CA1351"
            android:textColor="@color/color_666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_plane_recomment_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="经济舱(5.1折)"
            android:textColor="@color/color_666"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/layout_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.9"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/item_plane_recomment_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="06:15"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/item_plane_recomment_arrow"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/item_plane_recomment_end_time"
                    android:layout_toRightOf="@id/item_plane_recomment_start_time"
                    android:src="@mipmap/alter_arrow" />


                <TextView
                    android:id="@id/item_plane_recomment_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="06:15"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:paddingLeft="15dp">
                <!--出发机场-->
                <TextView
                    android:id="@+id/item_plane_recomment_orgname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首都国际机场T3"
                    android:textColor="@color/color_666"
                    android:textSize="11sp" />
                <!--到达-->
                <TextView
                    android:id="@+id/item_plane_recomment_arriname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="天河机场"
                    android:textColor="@color/color_666"
                    android:textSize="11sp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/item_plane_recomment_price_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp">

                <ImageView
                    android:id="@+id/item_plane_recomment_wei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@mipmap/wei" />

                <TextView
                    android:id="@+id/item_plane_recomment_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥106"
                    android:textColor="@color/appTheme2"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_plane_recomment_seatnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_plane_recomment_price_item"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="13dp"
                android:text="充足"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_plane_recomment_book"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_button_blue"
                android:gravity="center"
                android:text="预订"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>