<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/item_plane_list_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="06:15"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_plane_list_end_time"
            android:layout_toRightOf="@id/item_plane_list_start_time"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_plane_list_arrow"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/alter_arrow" />

            <TextView
                android:id="@+id/item_plane_list_jt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="经停"
                android:textColor="@color/appTheme1"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_plane_list_wei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="7dp"
                android:src="@mipmap/wei" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="￥"
                android:textColor="@color/appTheme2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_plane_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="bottom"
                android:text="100"
                android:textColor="@color/appTheme2"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@id/item_plane_list_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="06:15"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <!--出发机场-->
        <TextView
            android:id="@+id/item_plane_list_orgname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="首都国际机场T3"
            android:textColor="@color/color_666"
            android:textSize="11sp" />
        <!--到达-->
        <TextView
            android:id="@+id/item_plane_list_arriname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:text="天河机场"
            android:textColor="@color/color_666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/item_plane_list_cangwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="经济舱（5.1折）"
            android:textColor="@color/color_666"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/item_plane_list_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/wei" />

        <TextView
            android:id="@+id/item_plane_list_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="CA1708"
            android:textColor="@color/color_666"
            android:textSize="14sp" />


        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/color_999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_plane_list_flightinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国航"
            android:textColor="@color/color_666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_plane_list_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="共享"
            android:textColor="@color/appTheme1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_plane_list_seatnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="right"
            android:text="充足"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>