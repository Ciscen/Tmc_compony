<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#ececec" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0.5dp"
        android:top="0.5dp">
        <!-- 此处定义只有上下两边有边框 高度为1像素-->

        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="#f6f9fb" />
        </shape>
    </item>
</layer-list>